{
  "name": "biome-tailwind-sorter-vscode",
  "displayName": "Biome Tailwind Sorter",
  "description": "VS Code extension for automatically sorting Tailwind CSS classes with cursor preservation",
  "version": "0.1.0",
  "publisher": "rizkyviali",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "keywords": [
    "tailwind",
    "css",
    "formatter",
    "sort",
    "classes",
    "cursor-preservation"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:astro"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "biome-tailwind-sorter.sortClasses",
        "title": "Sort Tailwind Classes"
      },
      {
        "command": "biome-tailwind-sorter.sortClassesInFile",
        "title": "Sort Tailwind Classes in File"
      }
    ],
    "keybindings": [
      {
        "command": "biome-tailwind-sorter.sortClasses",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Biome Tailwind Sorter",
      "properties": {
        "biome-tailwind-sorter.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Biome Tailwind Sorter extension"
        },
        "biome-tailwind-sorter.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sort Tailwind classes on file save"
        },
        "biome-tailwind-sorter.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to the biome-tailwind-sorter binary. If empty, will try to find it in PATH or node_modules"
        },
        "biome-tailwind-sorter.languages": {
          "type": "array",
          "default": ["html", "javascript", "javascriptreact", "typescript", "typescriptreact", "vue", "astro"],
          "description": "Languages to enable Tailwind class sorting for"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "compile-tsc": "tsc -p ./",
    "watch": "webpack --watch",
    "watch-tsc": "tsc -watch -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile-tsc && npm run lint",
    "lint": "eslint src --ext ts",
    "vsce-package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/vsce": "^2.21.0",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizkyviali/biome-tailwind-sorter.git",
    "directory": "vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/rizkyviali/biome-tailwind-sorter/issues"
  },
  "homepage": "https://github.com/rizkyviali/biome-tailwind-sorter#readme",
  "license": "MIT"
}